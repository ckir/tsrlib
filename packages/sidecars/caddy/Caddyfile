:8080 {
    # Serve TypeScript Docs
    handle_path /docs/ts/* {
        root * docs/ts
        file_server browse
    }
    
    # Serve Rust Docs
    handle_path /docs/rs/* {
        root * docs/rs
        file_server browse
    }

    # API Proxy (Only proxy /api requests to port 3000)
    handle /api/* {
        reverse_proxy localhost:3000
    }

    # Static Landing Page (Prevents 502 on root)
    handle / {
        respond "TSRLIB Gateway is Online. Visit /docs/ts or start your app on :3000 for /api"
    }
}